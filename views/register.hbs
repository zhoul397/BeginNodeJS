<link rel='stylesheet' href='/stylesheets/views/register.css' />

<div class="container">
    <div class="text-center title-style">用户注册</div>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-md-1 control-label">用户名:</label>
            <div class="col-md-10">
                <input type="text" class="form-control" placeholder="手机号/邮箱">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label">密&nbsp;&nbsp;&nbsp;码:</label>
            <div class="col-md-10">
                <input type="password" class="form-control" placeholder="请输入密码">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <button type="button" class="btn btn-success btn-block">注册</button>
            </div>
        </div>
    </form>
</div>